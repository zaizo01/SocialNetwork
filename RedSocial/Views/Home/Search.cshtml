@using Core.Application.ViewModels.User
@model List<UserViewModel>
@{
    ViewData["Title"] = "Search";
}

<div class="text-center w-50 d-block m-auto">
    @if(Model.Count == 0)
    {
        <h1>No se encontraron usuario </h1>
    }
    @foreach(UserViewModel user in Model) 
    { 
        <div class="d-flex justify-content-between m-5">
            <div class="d-flex align-items-center">
                <div class="card p-5">
                  <div class="card-body">
                      <div class="text-center">
                        <img src="@user.ProfilePicture" style="width:40px;height:40px;border-radius:50%;margin-right:10px;" />
                      </div>
                      <form method="post" asp-controller="Home" asp-action="AddFriend">
                        <div>
                            <input type="hidden" name="Id" value=@user.Id />
                            <p style="text-decoration:none;">@user.UserName (@user.Name @user.LastName ) </p>
                            <button class="btn btn-success">Añadir a amigos</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
        </div>
    }
</div>